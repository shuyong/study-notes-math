\begin_inset Formula 
\[
\begin{array}{rl}
r & =-2-i\\
s & =ri\\
 & =(-2-i)i\\
 & =-2i-i^{2}\\
 & =1-2i
\end{array}
\]

\end_inset


\end_layout

